{
   "manifest_version": 2,
   "name": "Download Sorter",
   "version": "1.0",
   "description": "Automatically organize downloads into folders by file type",
   "author": "Will Harrys",
   "homepage_url": "https://github.com/willharrys/download-sorter-firefox",
   
   "applications": {
      "gecko": {
         "id": "download-sorter@willharrys.github.io",
         "strict_min_version": "60.0"
      }
   },

   "background": {
      "scripts": ["bg.js"],
      "persistent": false
   },

   "browser_action": {
      "default_title": "Download Sorter - Organize your downloads",
      "default_popup": "options.html"
   },

   "options_ui": {
      "page": "options.html",
      "open_in_tab": true
   },

   "permissions": [
      "downloads",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
   ],

   "content_security_policy": "script-src 'self'; object-src 'self'; connect-src 'none'; font-src 'self'; img-src 'self'; media-src 'none'; style-src 'self' 'unsafe-inline';"
}
